generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model cart_items {
  id         Int       @id @default(autoincrement())
  user_id    Int
  product_id Int
  quantity   Int?      @default(1)
  created_at DateTime? @default(now()) @db.Timestamp(0)
  updated_at DateTime? @default(now()) @db.Timestamp(0)
  users      users     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "cart_items_ibfk_1")
  products   products  @relation(fields: [product_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "cart_items_ibfk_2")

  @@unique([user_id, product_id], map: "unique_cart_item")
  @@index([product_id], map: "product_id")
}

model categories {
  id          Int        @id @default(autoincrement())
  name        String     @db.VarChar(50)
  slug        String     @unique(map: "slug") @db.VarChar(50)
  description String?    @db.Text
  created_at  DateTime?  @default(now()) @db.Timestamp(0)
  products    products[]
}

model order_items {
  id            Int       @id @default(autoincrement())
  order_id      Int
  product_id    Int
  product_name  String    @db.VarChar(255)
  product_price Int
  quantity      Int
  created_at    DateTime? @default(now()) @db.Timestamp(0)
  orders        orders    @relation(fields: [order_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "order_items_ibfk_1")
  products      products  @relation(fields: [product_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "order_items_ibfk_2")

  @@index([order_id], map: "idx_order_items_order")
  @@index([product_id], map: "product_id")
}

model orders {
  id                       Int            @id @default(autoincrement())
  user_id                  Int
  order_number             String         @unique(map: "order_number") @db.VarChar(50)
  total_amount             Int
  shipping_fee             Int?           @default(0)
  status                   orders_status? @default(pending)
  recipient_name           String         @db.VarChar(100)
  recipient_phone          String         @db.VarChar(20)
  recipient_address        String         @db.Text
  recipient_address_detail String?        @db.VarChar(255)
  recipient_zipcode        String?        @db.VarChar(10)
  memo                     String?        @db.Text
  payment_method           String?        @db.VarChar(50)
  payment_key              String?        @db.VarChar(255)
  paid_at                  DateTime?      @db.Timestamp(0)
  created_at               DateTime?      @default(now()) @db.Timestamp(0)
  updated_at               DateTime?      @default(now()) @db.Timestamp(0)
  order_items              order_items[]
  users                    users          @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "orders_ibfk_1")

  @@index([status], map: "idx_orders_status")
  @@index([user_id], map: "idx_orders_user")
}

model product_images {
  id         Int       @id @default(autoincrement())
  product_id Int
  image_url  String    @db.VarChar(500)
  sort_order Int?      @default(0)
  created_at DateTime? @default(now()) @db.Timestamp(0)
  products   products  @relation(fields: [product_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "product_images_ibfk_1")

  @@index([product_id], map: "product_id")
}

model products {
  id             Int              @id @default(autoincrement())
  category_id    Int
  name           String           @db.VarChar(255)
  slug           String           @unique(map: "slug") @db.VarChar(255)
  description    String?          @db.Text
  price          Int
  sale_price     Int?
  stock          Int?             @default(0)
  thumbnail      String?          @db.VarChar(500)
  is_active      Boolean?         @default(true)
  is_featured    Boolean?         @default(false)
  created_at     DateTime?        @default(now()) @db.Timestamp(0)
  updated_at     DateTime?        @default(now()) @db.Timestamp(0)
  cart_items     cart_items[]
  order_items    order_items[]
  product_images product_images[]
  categories     categories       @relation(fields: [category_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "products_ibfk_1")

  @@index([is_active], map: "idx_products_active")
  @@index([category_id], map: "idx_products_category")
}

model rental_inquiries {
  id         Int                      @id @default(autoincrement())
  name       String                   @db.VarChar(100)
  email      String                   @db.VarChar(255)
  phone      String                   @db.VarChar(20)
  company    String?                  @db.VarChar(255)
  location   String?                  @db.VarChar(255)
  space_size String?                  @db.VarChar(100)
  message    String?                  @db.Text
  status     rental_inquiries_status? @default(new)
  created_at DateTime?                @default(now()) @db.Timestamp(0)
  updated_at DateTime?                @default(now()) @db.Timestamp(0)
}

model users {
  id             Int             @id @default(autoincrement())
  email          String          @unique(map: "email") @db.VarChar(255)
  password       String?         @db.VarChar(255)
  name           String          @db.VarChar(100)
  phone          String?         @db.VarChar(20)
  address        String?         @db.Text
  address_detail String?         @db.VarChar(255)
  zipcode        String?         @db.VarChar(10)
  role           users_role?     @default(user)
  provider       users_provider? @default(local)
  provider_id    String?         @db.VarChar(255)
  profile_image  String?         @db.VarChar(500)
  created_at     DateTime?       @default(now()) @db.Timestamp(0)
  updated_at     DateTime?       @default(now()) @db.Timestamp(0)
  cart_items     cart_items[]
  orders         orders[]
}

enum orders_status {
  pending
  paid
  preparing
  shipped
  delivered
  cancelled
}

enum rental_inquiries_status {
  new
  contacted
  completed
}

enum users_role {
  user
  admin
}

enum users_provider {
  local
  naver
  kakao
}
